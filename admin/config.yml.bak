backend:
  name: git-gateway
  branch: main

media_folder: "uploads"
public_folder: "/uploads"

collections:
  - name: "content"
    label: "Content"
    files:
      - name: "home"
        label: "Home Page"
        file: "content/home.json"
        format: "json"
        fields:
          - { name: "title", label: "Title", widget: "string" }
          - { name: "subtitle", label: "Subtitle", widget: "string" }
          - { name: "about", label: "About", widget: "text" }
