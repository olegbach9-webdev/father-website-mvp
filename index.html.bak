<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Father Website</title>
</head>
<body>
  <nav>
    <a href="/">Home</a> |
    <a href="/research.html">Research</a> |
    <a href="/publications.html">Publications</a>
  </nav>

  <h1 id="name">Loadingâ€¦</h1>
  <h2 id="title"></h2>
  <p id="about"></p>
  <p>Email: <a id="email" href="#"></a></p>

  <script>
    fetch('/content/home.json', { cache: 'no-store' })
      .then(r => r.json())
      .then(d => {
        document.getElementById('name').textContent = d.name;
        document.getElementById('title').textContent = d.title;
        document.getElementById('about').textContent = d.about;
        const a = document.getElementById('email');
        a.textContent = d.email;
        a.href = 'mailto:' + d.email;
      });
  </script>
</body>
</html>
