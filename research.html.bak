<!doctype html>
<html lang="en">
<head><meta charset="utf-8" /><meta name="viewport" content="width=device-width,initial-scale=1" /><title>Research</title></head>
<body>
  <nav>
    <a href="/">Home</a> |
    <a href="/research.html">Research</a> |
    <a href="/publications.html">Publications</a>
  </nav>

  <h1>Research</h1>
  <p id="intro">Loadingâ€¦</p>
  <div id="areas"></div>

  <script>
    fetch('/content/research.json', { cache: 'no-store' })
      .then(r => r.json())
      .then(d => {
        document.getElementById('intro').textContent = d.intro;
        const container = document.getElementById('areas');
        container.innerHTML = '';
        d.areas.forEach(a => {
          const block = document.createElement('section');
          block.innerHTML = `<h2>${a.title}</h2><p>${a.text}</p>`;
          container.appendChild(block);
        });
      });
  </script>
</body>
</html>
